<templates>
    <template id="scene">
        <scene id="bonusbet">
            <view>
                <winningPopup id="winPanel" visible="false" sound="totalwin">
                    <img res="@atlas/bonusbetlang/youwin.png" x="480" y="245" pivot="50%,50%"/>
                    <animatedLabel id="animLabel" bitmap="true" fontFamily="winnumber" fontSize="45" value="0.00" align="center" x="480" y="290" duration="3000"/>
                    <img res="@atlas/bonusbet/winpanel.png" x="480" y="260" pivot="50%,50%"/>
                    <rectangle width="960" height="540" alpha="0.5"/>
                </winningPopup>
                <layer id="wheelLight">
                    <img res="@atlas/bonusbet/wheellight.png" scale="2"/>
                </layer>
                <img res="@atlas/bonusbetlang/logo.png" x="130" y="80" pivot="50%,50%" />
                <slide x="835" y="100" id="desc" goto="0">
                    <img res="@atlas/bonusbetlang/desc1.png" pivot="50%,50%" scale="1.3"/>
                    <img res="@atlas/bonusbetlang/desc2.png" pivot="50%,50%" scale="1.3"/>
                </slide>
                <img id="descboard" res="@atlas/bonusbet/board.png" x="715" y="20"/>
                <img res="@atlas/bonusbet/bgbtm.png" y="408"/>
                <bonusBetBar id="wheelBar" x="288" y="30">
                    <img id="lang0" res="@atlas/bonusbetlang/1.png" x="65" y="28" pivot="50%,50%"/>
                    <img id="lang1" res="@atlas/bonusbetlang/2.png" x="150" y="28" pivot="50%,50%"/>
                    <img id="lang2" res="@atlas/bonusbetlang/3.png" x="235" y="28" pivot="50%,50%"/>
                    <img id="lang3" res="@atlas/bonusbetlang/4.png" x="320" y="28" pivot="50%,50%"/>
                    <img id="lang4" res="@atlas/bonusbetlang/5.png" x="65" y="28" pivot="50%,50%"/>
                    <img id="lang5" res="@atlas/bonusbetlang/6.png" x="150" y="28" pivot="50%,50%"/>
                    <img id="lang6" res="@atlas/bonusbetlang/7.png" x="235" y="28" pivot="50%,50%"/>
                    <img id="lang7" res="@atlas/bonusbetlang/8.png" x="320" y="28" pivot="50%,50%"/>
                    <widget id="item1" name="wheelbaritem" x="65" y="28"/>
                    <widget id="item2" name="wheelbaritem" x="150" y="28"/>
                    <widget id="item3" name="wheelbaritem" x="235" y="28"/>
                    <widget id="item4" name="wheelbaritem" x="320" y="28"/>
                    <img res="@atlas/bonusbet/barleft.png"/>
                    <img id="bar" res="@atlas/bonusbet/bar.png" x="39" y="20"/>
                    <img res="@atlas/bonusbet/barempty.png"/>
                </bonusBetBar>
                <wheel id="wheel" x="480" y="335">
                    <pendulum x="-1" y="-232" id="pendulum">
                        <img res="@atlas/bonusbet/pin.png" pivot="11, 7"/>
                    </pendulum>
                    <selection id="btnSpin" x="-40" y="-40">
                        <rectangle width="80" height="80" alpha="0"/>
                    </selection>
                    <img id="imgSpin" res="@atlas/bonusbetlang/spin.png" pivot="50%,50%"/>
                    <layer id="wheel">
                        <layer id="textContainer" />
                        <img res="@atlas/bonusbet/wheel6.png" id="wheel6" pivot="213, 220"/>
                        <img res="@atlas/bonusbet/wheel5.png" id="wheel5" pivot="213, 220"/>
                    </layer>
                    <img res="@atlas/bonusbet/wheelframe.png" x="-218" y="-243"/>
                </wheel>
                <img res="@img/bonuswheelbg"/>
            </view>
        </scene>
    </template>
    <template id="resource">
        <json id="wheelsound" src="../_commons/bonusbet/wheel.json"/>
        <atlas id="bonusbet" src="../_commons/bonusbet/bonuswheel.json" />
        <atlas id="bonusbetlang" src="../_commons/bonusbet/bonuswheel{{LANGUAGE}}.json" />
        <img id="bonuswheelbg" src="../_commons/bonusbet/bonuswheelbg.jpg" />
        <sheet id="wheelexplode" src="../_commons/bonusbet/wheelexplode.png" frame="15" width="5" size="403,359"/>
        <text id="wheelnum" src="../_commons/bonusbet/wheelnum.xml" />
    </template>
    <template id="widget">
        <layer id="wheelpie">
            <label bitmap="true" fontFamily="wheelnum" id="txt" fontSize="35" value="" align="center" y="-160"/>
            <!--<rectangle width="30" height="30" y="-80" x="-20"/>-->
        </layer>
        <layer id="wheelbaritem">
            <img id="btm" res="@atlas/bonusbet/barpointer.png" y="45" pivot="50%,50%"/>
            <img id="top" res="@atlas/bonusbet/barpointer.png" y="-45" scale="1,-1" pivot="50%,50%"/>
            <img id="effect" res="@atlas/bonusbet/iconeffect.png" pivot="50%,50%" alpha="0.5"/>
            <slide id="icon" goto="iconidle">
                <img id="iconidle" res="@atlas/bonusbet/wheelicon.png" selected="true" pivot="50%,50%"/>
                <img id="icondis" res="@atlas/bonusbet/wheelicondis.png" pivot="50%,50%" />
            </slide>
        </layer>
        <img id="wheel888" res="@atlas/bonusbet/888.png" pivot="50%,50%" scale="0.6" y="-140"/>
        <img id="shoot" res="@atlas/bonusbet/shoot.png"/>
        <layer id="wheelloading" fadein="500" fadeout="500">
            <if name="lang" value="cs">
                <img res="@atlas/bonusbetlang/logo.png" x="480" y="270" pivot="50%,50%"/>
                <img res="@atlas/bonusbetlang/win.png" x="480" y="180" pivot="50%,50%"/>
                <rectangle interactive="true" width="960" height="540" alpha="0.7"/>
            </if>
            <if name="lang" value="cs" not="true">
                <img res="@atlas/bonusbetlang/logo.png" x="480" y="230" pivot="50%,50%"/>
                <img res="@atlas/bonusbetlang/win.png" x="480" y="330" pivot="50%,50%"/>
                <rectangle interactive="true" width="960" height="540" alpha="0.7"/>
            </if>
        </layer>
        <layer id="bonusbetNote" fadein="500" fadeout="500">
            <img res="@atlas/bonusbetlang/notification.png" x="480" y="270" pivot="50%,50%" scale="1"/>
            <img res="@atlas/bonusbet/board.png" x="480" y="270" pivot="50%,50%" scale="1.5"/>
            <rectangle interactive="true" width="960" height="540" alpha="0.7"/>
        </layer>
        <movieClip id="wheelexplode" mode="singleton" res="@sheet/wheelexplode" speed="0.2" loop="1"/>
    </template>
</templates>