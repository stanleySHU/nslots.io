<layer id="hud">

  <!-- PRIZES & TIMER -->
  <label id="prizes" x="30" y="70" value="0" fontFamily="Arial, Helvetica, Microsoft Yahei, Malgun Gothic, sans-serif" align="center" fontSize="18" fontWeight="bold" fill="0xFFFFFF" />
  <label id="timer" x="91" y="71.5" value="00:00:00" fontFamily="Arial, Helvetica, Microsoft Yahei, Malgun Gothic, sans-serif" align="center" fontSize="16" fontWeight="bold" fill="0xFFFFFF" />
  <img x="9" y="60" res="@atlas/ui/panel-prize-time.png" />
  
  <!-- BUTTON MENU -->
  <button id="btnMenu" x="448" y="69" command="menu">
    <img id="up" res="@atlas/ui/btn-menu-on.png" />
    <img id="disable" res="@atlas/ui/btn-menu-off.png" />
  </button>   
  <button id="btnClose" x="484" y="69" command="close" sound="close">
    <img id="up" res="@atlas/ui/btn-close-on.png" />
    <img id="disable" res="@atlas/ui/btn-close-off.png" />
  </button> 
  <img x="442" y="64" res="@atlas/ui/panel-buttons.png" />

  <!-- MENU BUTTONS PANEL -->
  <layer id="menu" x="442" y="67" visible="false" interative="false" interativeChildren="false">
    <button id="btnRecords" x="5" y="45" command="records">
      <img id="up" res="@atlas/ui/btn-records-on.png" />
      <img id="disable" res="@atlas/ui/btn-records-off.png" />
    </button> 
    <button id="btnInfo" x="5" y="97" command="info">
      <img id="up" res="@atlas/ui/btn-info-on.png" />
      <img id="disable" res="@atlas/ui/btn-info-off.png" />
    </button> 
    <img res="@atlas/ui/panel-menu.png" />
  </layer>
</layer>