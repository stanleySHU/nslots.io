<scene id="infoPage">    
	<view>
        <button id="btnBack" pivot="50%,50%" l-x="916" p-x="511" y="26" onClick="backClickHandler">
            <img id="up" res="@atlas/ui/btn-close.png" tint="{{colorTheme}}" />
        </button>
        <placeholder id="gameTitle">
            <img pivot="50%,50%" l-x="480" p-x="270" y="26" res="@atlas/lang/info-game-title.png" tint="{{colorTheme}}" />
        </placeholder>
        <placeholder id="infoPanel">
            <infoPanel id="infoPanel" l-y="25" p-y="54" pages="{{numInfoPages}}" indicatorBase="@atlas/ui/info-indicator-base.png" indicatorOnTint="{{colorTheme}}" indicatorOffTint="0x56566E" indicatorOffsetYL="50" indicatorOffsetYP="50" indicatorY="15" indicatorGap="70" />
        </placeholder>
        <rectangle width="960" height="52" color="0x2B2B36" l-visible="true" p-visible="false" />
        <rectangle y="52" width="960" height="488" color="0x30303C" l-visible="true" p-visible="false" />
        <rectangle width="540" height="52" color="0x2B2B36" l-visible="false" p-visible="true" />
        <rectangle y="52" width="540" height="908" color="0x30303C" l-visible="false" p-visible="true" />
    </view>
</scene>
