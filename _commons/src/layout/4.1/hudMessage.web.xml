<hudMessage id="hudMessage" x="640" y="535" pivot="50%,50%" visible="false">
    <placeholder id="txt">
        <if name="lang" in="cs,en,id,jp,th" >
            <label id="txt" x="460" y="2" align="center" fontFamily="Microsoft YaHei" fontSize="20" fill="0xFFFFFF" />
        </if>
        <if name="lang" in="kh" >
            <label id="txt" x="460" y="2" align="center" fontFamily="Arial, Helvetica, sans-serif" fontSize="22" fill="0xFFFFFF" />
        </if>
        <if name="lang" in="kr" >
            <label id="txt" x="460" y="5" align="center" fontFamily="Malgun Gothic" fontSize="20" fill="0xFFFFFF" />
        </if>
        <if name="lang" in="vn" >
            <label id="txt" x="460" y="3" align="center" fontFamily="Arial, Helvetica, sans-serif" fontSize="20" fill="0xFFFFFF" />
        </if>
    </placeholder>
    <placeholder id="background">
        <img res="@atlas/ui/hud-msg-bg.png" />
    </placeholder>
</hudMessage>