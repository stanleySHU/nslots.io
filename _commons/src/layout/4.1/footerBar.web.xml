<footerBar id="footerBar">
	<label id="username" fontFamily="Din, Arial" fontSize="16" fill="0Xffffff" x="166" y="731"/>
	<animatedLabel fontFamily="Din, Arial" x="356" y="731" id="totalBet" align="left" value="0.00" fontSize="16" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
	<animatedLabel fontFamily="Din, Arial" x="566" y="731" id="win" align="left" value="0.00" fontSize="16" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
	<animatedLabel fontFamily="Din, Arial" x="776" y="731" id="balance" value="0.00" fontSize="16" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />	
	<label id="usertime" fontFamily="Din, Arial" fontSize="16" fill="0Xffffff" x="1020" y="731" />	
	<placeholder id="footerBarLabels">
		<langLabel bitmap="true" value="{{username}}" case="upper" align="left" fontFamily="lang" x="166" y="751" fontSize="15" fill="0xffffff"/>
        <langLabel bitmap="true" value="{{totalbet}}" case="upper" align="left" fontFamily="lang" x="356" y="751" fontSize="15" fill="0xffffff"/>
        <langLabel bitmap="true" value="{{win}}" case="upper" align="left" fontFamily="lang" x="566" y="751" fontSize="15" fill="0xffffff"/>
        <langLabel bitmap="true" value="{{balance}}" case="upper" align="left" fontFamily="lang" x="776" y="751" fontSize="15" fill="0xffffff"/>
        <langLabel bitmap="true" value="{{time}}" case="upper" align="left" fontFamily="lang" x="1020" y="751" fontSize="15" fill="0xffffff"/>
    </placeholder>    
	<placeholder id="footerBarIcons">
        <img id="iconuser" res="@atlas/ui/icon-username.png" x="146" y="749" pivot="50%,50%"/>
        <img id="icontotalbet" res="@atlas/ui/icon-total-bet.png" x="336" y="749" pivot="50%,50%"/>
        <img id="iconwin" res="@atlas/ui/icon-win.png" x="546" y="749" pivot="50%,50%"/>
        <img id="iconbalance" res="@atlas/ui/icon-balance.png" x="756" y="749" pivot="50%,50%"/>
        <img id="icontime" res="@atlas/ui/icon-time.png" x="1000" y="749" pivot="50%,50%"/>
    </placeholder>
	<placeholder id="winBox">
		<layer id="winBox" x="348" y="508" visible="false">
			<animatedLabel id="winBoxLabel" bitmap="true" duration="700" fontFamily="winnumber" fontSize="38" value="12345678.00" align="center" x="292" y="8"/>
		</layer>
	</placeholder>
	<placeholder id="background">
	    <rectangle x="0" y="730" width="1280" height="40" color="0x30303C" alpha="0.85" />
    </placeholder>
</footerBar>