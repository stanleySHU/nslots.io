<scene id="infoPage">    
	<view>
        <button id="btnBack" pivot="50%,50%" x="916" y="26" onClick="backClickHandler">
            <img id="up" res="@atlas/ui/btn-close.png" tint="{{colorTheme}}" />
        </button>
        <placeholder id="gameTitle">
            <img pivot="50%,50%" x="480" y="26" res="@atlas/lang/info-game-title.png" tint="{{colorTheme}}" />
        </placeholder>
        <placeholder id="infoPanel">
            <infoPanel id="infoPanel" y="25" pages="{{numInfoPages}}" indicatorBase="@atlas/ui/info-indicator-base.png" indicatorOnTint="{{colorTheme}}" indicatorOffTint="0x56566E" indicatorOffsetYL="50" indicatorOffsetYP="50" indicatorY="15" indicatorGap="70" />
        </placeholder>
        <rectangle width="960" height="52" color="0x2B2B36" />
        <rectangle y="52" width="960" height="488" color="0x30303C" />
    </view>
</scene>