<betPanel id="betSettings">
     <layer id="panel">
	 	<button id="close" x="920" y="131" >
			<img id="up" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0xEEEEEE" />
			<img id="over" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" />
			<img id="disable" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0x888888" />
		</button>
		<langLabel bitmap="true" x="30" y="120" value="{{betsetting}}" case="upper" fontFamily="lang" fontSize="30" fill="{{colorTheme}}" />
		<placeholder id="additionalBetSettings" />
		<placeholder id="linebetSelection">
			<layer id="paylines">
				<langLabel bitmap="true" x="50" y="247" value="{{lines}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
				<langLabel x="185" y="242" value="{{numBetLines}}" align="center" fontFamily="Din, Arial" fontSize="25" fill="{{colorTheme}}" />
			</layer>		
			<layer id="payways" visible="false">
				<langLabel bitmap="true" x="50" y="247" value="{{wayswin}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
				<langLabel x="220" y="242" value="{{winWays}}" align="center" fontFamily="Din, Arial" fontSize="25" fill="{{colorTheme}}" />
			</layer>
			<!-- line -->
			<!-- <rectangle x="15" y="477" width="510" height="2" color="0x474747" l-visible="false" p-visible="true" /> -->

			<layer id="labelbet" x="460" y="248">
				<langLabel id="linebet" bitmap="true" value="{{linebet}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
				<if name="lang" in="th" not="true">
					<langLabel id="betamount" visible="false" bitmap="true" value="{{betamount}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
					<label id="currency" y="-3" fontFamily="Din, Arial" fontSize="22" fill="0xBFBFBF" value="  ({{CCY}})" />
				</if>
				<if name="lang" in="th">
					<langLabel id="betamount" visible="false" bitmap="true" value="{{betamount}}" fontFamily="lang" fontSize="19" fill="0xBFBFBF" />
					<label id="currency" y="-3" fontFamily="Din, Arial" fontSize="19" fill="0xBFBFBF" value=" ({{CCY}})" />
				</if>
			</layer>
			<carousel 	id="betSelection" x="647" y="238.5" top="@atlas/ui/total-bet.png"
						dropdown-x="28" numItemsShown="5" itemsTextX="-14"
						itemOffsetY="4" dropdownWidth="150" itemHeight="35"
						dropdown="@atlas/ui/linebet_list.png" highlight="@atlas/ui/popup-select.png" dropdownPosition="top" 
						itemsTextColor="0xBFBFBF" itemGap="3" itemPadding="8" mouseWheelGap="27" scrollPadding="18"
						scrollbutton="@atlas/ui/scrollerbar_in.png"
						scrollbar="@atlas/ui/scrollerbar_out.png" 
						scrollbarY="-9" highlightColor="0x3D3D4B"
						align="center" fontFamily="Din, Arial" fontSize="25" selectedItemTextColor="{{colorTheme}}" 
						arrowSize="14" arrowColor="0xE4E4E4" arrowPadding="10" 
						scaleTopBottomItems="2" scaleTopBottomValue="0.12" />

			<rectangle x="0" y="237" width="960" height="40" color="0x3D3D4B" />
			<!-- <rectangle x="0" y="574" width="540" height="40" color="0x3D3D4B" l-visible="false" p-visible="true" /> -->

			<!-- line -->
			<rectangle x="25" y="370" width="910" height="2" color="0x474747" />
			<!-- <rectangle x="15" y="705" width="510" height="2" color="0x474747" l-visible="false" p-visible="true" /> -->
		</placeholder>
		<if name="lang" in="kr" not="true">
			<layer id="labeltotalbet" x="180" y="400" pivot="50%,0">
				<langLabel id="totalbet" bitmap="true" value="{{totalbet}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
				<label id="currency" y="-3" fontFamily="Din, Arial" fontSize="22" fill="0xBFBFBF" value="  ({{CCY}})" />
			</layer>
		</if>
		<if name="lang" in="kr">
			<layer id="labeltotalbet" x="190" y="400" pivot="50%,0">
				<langLabel id="totalbet" bitmap="true" value="{{totalbet}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
				<label id="currency" y="-3" fontFamily="Din, Arial" fontSize="22" fill="0xBFBFBF" value="  ({{CCY}})" />
			</layer>
		</if>
		<label id="totalBet" x="180" y="429" align="center" fontFamily="Din, Arial" fontSize="34" fill="{{colorTheme}}" value="0.00" />

		<layer id="maxbetSelected" x="369" y="401" visible="false" interactive="false">
			<if name="lang" in="cs,jp,kr">
				<langLabel bitmap="true" x="90" y="15" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
			</if>		
			<if name="lang" in="id">
				<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0xFFFFFF" pivot="0,50%" />
			</if>
			<if name="lang" in="kh">
				<langLabel bitmap="true" x="90" y="35" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0xFFFFFF" pivot="0,50%" />
			</if>		
			<if name="lang" in="vn">
				<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="21" fill="0xFFFFFF" pivot="0,50%" />
			</if>		
			<if name="lang" in="en,th">
				<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
			</if>
			<rectangle width="180" height="60" color="{{colorTheme}}" border="1" innerShadow="{{colorThemeHighlight}}" dropShadow="0x000000" />     
		</layer>
		<button id="maxBet" command="onMaxBet" x="369" y="401" >
			<layer id="up">
				<if name="lang" in="cs,jp,kr">
					<langLabel bitmap="true" x="90" y="15" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>		
				<if name="lang" in="id">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0xFFFFFF" pivot="0,50%" />
				</if>
				<if name="lang" in="kh">
					<langLabel bitmap="true" x="90" y="35" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0xFFFFFF" pivot="0,50%" />
				</if>		
				<if name="lang" in="vn">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="21" fill="0xFFFFFF" pivot="0,50%" />
				</if>		
				<if name="lang" in="en,th">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>
				<rectangle width="180" height="60" color="0x3D3D4B" border="1" innerShadow="0x5C5C72" dropShadow="0x000000"  />
			</layer>
			<layer id="disable">
				<if name="lang" in="cs,jp,kr">
					<langLabel bitmap="true" x="90" y="15" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0x1C1B1B" pivot="0,50%" />
				</if>		
				<if name="lang" in="id">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0x1C1B1B" pivot="0,50%" />
				</if>
				<if name="lang" in="kh">
					<langLabel bitmap="true" x="90" y="35" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="22" fill="0x1C1B1B" pivot="0,50%" />
				</if>		
				<if name="lang" in="vn">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="21" fill="0x1C1B1B" pivot="0,50%" />
				</if>	
				<if name="lang" in="en,th">
					<langLabel bitmap="true" x="90" y="30" value="{{maxbet}}"  case="upper" align="center" fontFamily="lang" fontSize="30" fill="0x1C1B1B" pivot="0,50%" />
				</if>
				<rectangle width="180" height="60" color="{{colorTheme}}" border="1" innerShadow="{{colorThemeHighlight}}" dropShadow="0x000000"  />
			</layer>
		</button>
		<button id="confirm" command="onConfirmBet" x="563" y="401" >
			<layer id="up">
				<if name="lang" in="cs,jp,kr">
					<langLabel bitmap="true" x="159" y="15" value="{{confirm}}" case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>
				<if name="lang" in="kh">
					<langLabel bitmap="true" x="159" y="35" value="{{confirm}}" case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>		
				<if name="lang" in="vn">
					<langLabel bitmap="true" x="159" y="29" value="{{confirm}}" case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>		
				<if name="lang" in="en,id,th">
					<langLabel bitmap="true" x="159" y="30" value="{{confirm}}" case="upper" align="center" fontFamily="lang" fontSize="30" fill="0xFFFFFF" pivot="0,50%" />
				</if>
				<rectangle width="318" height="60" color="{{colorTheme}}" border="1" innerShadow="{{colorThemeHighlight}}" dropShadow="0x000000"  />
			</layer>
		</button>   
		<placeholder id="border">
			<rectangle x="0" y="488" width="960" height="1" color="0x3F444F" />
			<rectangle x="0" y="489" width="960" height="1" color="0x68687B" />
		</placeholder>
		<!-- <rectangle y="362" l-visible="false" p-visible="true" width="542" height="546" color="0x30303C" alpha="1" interactive="true"/> -->
        <rectangle y="93" width="962" height="395" color="0x30303C" alpha="1"  interactive="true"/>
     </layer>    
	<layer id="clickable">
		<rectangle width="960" height="490" alpha=".7" />
		<!-- <rectangle l-visible="false" p-visible="true" width="540" height="910" alpha=".7" /> -->
	</layer>
</betPanel>