<scene id="splash" next="main">
  <resources>
    <placeholder id="ui">
		  <atlas id="ui" src="../_commons/ui/v{{uiWebVersion}}/{{LANGUAGE}}.web.json" />
    </placeholder>
		<text id="hudfont" src="../_commons/ui/v{{uiWebVersion}}/font/{{HUDLANG}}.xml" />
		<text id="font" src="../_commons/font/{{LANGUAGE}}.xml" />
    <placeholder id="winnumber">
      <text id="winnumber" src="../_commons/font/winnumber.xml" />
    </placeholder>
		<text id="number" src="../_commons/font/number.xml" />
    <atlas id="fround" src="../_commons/freeround/img/sprite.json" />
		<text id="frtemplate" src="../_commons/freeround/template.json" />
		<text id="frconfig" src="../_commons/freeround/config/{{LANGUAGE}}.json" />
		<text id="gamefolder" src="../_commons/text/gamefolder.json" />
    <json id="sounds" src="assets/sounds.json" />
    <placeholder id="splashres"/>
  </resources>
  <view>
    <placeholder id="splashview">
      <img id="circle" res="@img/preloader_anim" x="640" y="700" pivot="50%,50%"/>
      <label x="640" y="720" id="label" fontFamily="Arial" fontSize="20" fontWeight="bold" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" align="center"/>
      <label x="1100" y="720" id="version" fontFamily="Arial" fontSize="20" fontWeight="bold" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" align="center" />
      <img res="@img/bg-loading"/>
    </placeholder>
  </view>
</scene>