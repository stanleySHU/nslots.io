<footerBar id="footerBar">
	<button id="lobby" x="228" y="230" command="lobby">
		<img id="up" res="@atlas/ui/back.png"/>
		<img id="over" res="@atlas/ui/back-over.png" x="-3" y="-3"/>
	</button>
	<layer id="winBox" x="0" y="77" visible="false">
		<animatedLabel id="winBoxLabel" bitmap="true" duration="700" fontFamily="winnumber" fontSize="28" value="12345678.00" align="center" x="125" y="13"/>
		<img res="@atlas/ui/win-bg.png"/>
	</layer>
	<animatedLabel bitmap="true" x="27" y="225" id="totalBet" align="left" value="0.00" fontFamily="number" fontSize="14" fill="0xffffff"/>
	<animatedLabel bitmap="true" x="140" y="225" id="balance" align="left" value="0.00" fontFamily="number" fontSize="14" fill="0xffffff"/>
	<animatedLabel bitmap="true" x="140" y="225" id="win" align="left" value="0.00" fontFamily="number" fontSize="14" fill="0xffffff" visible="false"/>
	<if name="lang" value="id">
		<langLabel bitmap="true" x="27" y="238" value="{{totalbet}}" case="upper" fontFamily="lang" fontSize="10" fill="0xaaaaaa" />
	</if>
	<if name="lang" value="id" not="true">
		<langLabel bitmap="true" x="27" y="238" value="{{totalbet}}" case="upper" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
	</if>
	<langLabel bitmap="true" x="140" y="238" id="labelBalWin" value="{{balance}}" case="upper" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
	<img res="@atlas/ui/TOTAL-BET.png" x="7" y="229"/>
    <img id="iconBal" res="@atlas/ui/BALANCE.png" x="120" y="229"/>
    <img id="iconWin" res="@atlas/ui/WIN.png" x="120" y="229" visible="false"/>
	<rectangle width="250" height="27" y="223" color="0x1F1F1F"/>
</footerBar>