<layer id="hud">
	<placeholder id="cheatBar">
		<cheatBar id="cheatBar" keys="1:Small Win,2:Big Win,3:Feature" x="-70" scale="0.69,0.8"/>
	</placeholder>
	<img res="@atlas/ui/btneffect2.png" id="btnBonusEffect" pivot="50%,50%" scale="1" x="275" y="838" />
	<if name="bonusbet" value="1">
		<img res="@atlas/ui/btneffect1.png" id="bonusbetEffect" pivot="50%,50%" scale="0.35" x="886" y="432" />
	</if>
	<tournament x="500" y="862" visible="false">
		<button id="btTournament"   command="tournament" pivot="50%,50%" > 
			<movieClip id="up" res="@sheet/tournamenticon" loop="-1" speed="0.1"/>
			<movieClip id="over" res="@sheet/tournamenticon" loop="-1" speed="0.1"/>
		</button>
	</tournament>
	<menu id="menu" x="12" y="420">
		<button id="toggle" y="410" up="@atlas/ui/menu.png" onClick="clickMenuHandler" />
		<button id="lobby" y="10" up="@atlas/ui/exit.png" onClick="clickExitHandler" />
		<button id="history" y="90" up="@atlas/ui/history.png" onClick="clickHistoryHandler" />
		<button id="settings" y="170" up="@atlas/ui/setting.png" onClick="clickSettingsHandler" />
		<button id="autospin" y="250" up="@atlas/ui/autospin.png" onClick="clickAdvancedAutoSpinHandler" />
		<toggleButton id="sound" y="330" onClick="clickSoundHandler">
			<img id="up" res="@atlas/ui/soundon.png" />
			<img id="down" res="@atlas/ui/soundoff.png" />
		</toggleButton>
        <include id="autospinoptions" x="85" y="250" view="basic" ref="../../_commons/src/layout/3.2/portrait/autospin.both.xml" />
		<if name="help" value="1">
			<button id="help" x="478" y="-420" up="@atlas/ui/help.png" onClick="clickHelpHandler" />
		</if>
		<if name="fround" value="1">
			<froundToggle id="fround" y="400" x="90" onClick="clickFroundHandler" visible="false">
				<layer x="70">
					<label y="-8" x="-1" bitmap="true" id="froundCount" align="center" fontFamily="number" fontSize="20" fill="0xffffff"/>
					<circle radius="14" color="0xff0000"/>
					<circle radius="16" color="0xffffff"/>
				</layer>
				<layer id="up">
					<layer>
						<img res="@atlas/fround/box-close.png"/>
						<img id="shine" res="@atlas/fround/shine.png" pivot="70px,65px" x="35" y="28"/>
					</layer>
					<tween name="box-anim" auto="true"/>
				</layer>
				<layer id="down">
					<img res="@atlas/fround/box-open.png"/>
					<img res="@atlas/fround/freerounds-{{LANGUAGE}}.png" pivot="50%,50%" y="70" scale="0.8" x="45"/>
					<img id="shine2" res="@atlas/fround/shine.png" pivot="70px,65px" x="45" y="35"/>
				</layer>
			</froundToggle>
		</if>
		<layer id="autoSpinDisplay"  y="395" x="420" >
			<img id="btnEffectStopAuto" x="45" y="45" res="@atlas/ui/btneffect2.png" scale="0.65,0.65" pivot="50%,50%" />
			<label id="autoSpinCount" x="45" y="45" align="center" fontFamily="Din, Arial" fontSize="24" fill="0x333333" pivot="0,50%" />
			<img id="autoSpinInfinity" x="45" y="45" visible="false" res="@atlas/ui/icon-infinity.png" scale="0.75,0.75" tint="0x333333" pivot="50%,50%" />
			<button id="btnStopAuto"  up="@atlas/ui/stop.png" onClick="stopAutoHandler" scale="0.75,0.75" />		
		</layer>
		<if name="bonusbet" value="1">
			<button id="realPlay" up="@atlas/ui/realplay2.png" onClick="clickRealPlayHandler" y="410" x="441"/>
			<button id="fund" up="@atlas/ui/fund2.png" onClick="clickFundHandler" y="410" x="441" />
		</if>
		<if name="bonusbet" value="1" not="true">
			<button id="realPlay" up="@atlas/ui/realplay2.png" onClick="clickRealPlayHandler" y="410" x="441"/>
			<button id="fund" up="@atlas/ui/fund2.png" onClick="clickFundHandler" y="410" x="441"/>
		</if>
		<if name="bonusbet" value="1">
			<toggleButton id="bonusbet" y="410" x="837" command="bonusbet">
				<img id="up" res="@atlas/bonusbetlang/bonusbetoff.png" />
				<img id="down" res="@atlas/bonusbetlang/bonusbeton.png" />
			</toggleButton>
		</if>
	</menu>
	<spinButton id="btnSpin" scale="1.2,1.2" pivot="50%,50%" spin="@atlas/ui/spin.png" skip="@atlas/ui/skip.png" hold="@atlas/ui/spin.png" stop="@atlas/ui/stop.png" bonus="@atlas/ui/play.png" command="spin" x="270" y="840" />
	<rectangle width="960" height="540" alpha="0" />
</layer>
