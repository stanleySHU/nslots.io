<scene id="settings">
	<view>
		<button id="btnHome" pivot="50%,50%" y="867" up="@atlas/ui/home.png" onClick="homeClickHandler" />
		<button id="btnBack" pivot="50%,50%" y="867" up="@atlas/ui/close.png" onClick="backClickHandler" />
		<toggleButton id="btnBet" y="867" selected="true" onClick="betKeyDown">
			<img id="up" res="@atlas/ui/betsetting.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/betsettingon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" rotation="-90" />
			</layer>
		</toggleButton>
		<toggleButton id="btnInfo" y="867" onClick="infoKeyDown">
			<img id="up" res="@atlas/ui/info.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/infoon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" rotation="-90" />
			</layer>
		</toggleButton>
		<toggleButton id="btnAutoSpin" y="867" onClick="autoKeyDown">
			<img id="up" res="@atlas/ui/autospin.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/autospinon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" rotation="-90" />
			</layer>
		</toggleButton>
		<!-- <rectangle width="95" height="540" color="0x000000" l-visible="true" p-visible="false" /> -->
		<rectangle width="540" height="140" color="0x000000" y="820" visible="true" />
		<layer id="betPanel" x="0">
			<layer x="10" y="50" >
				<label id="totalBet" align="center" fontFamily="Din, Arial" fontSize="30" fill="0Xffffff" value="RMB 10000.00" x="250" y="100" />
				<langLabel bitmap="true" x="250" align="center" y="70" value="{{totalbet}}" fontFamily="lang" fontSize="35" fill="0xffffff" />
				<img res="@atlas/ui/box-total-bet.png" y="55" x="0" scale="1.38,1.85" />
			</layer>
			<placeholder id="paylinesPanel">
				<layer y="90" x="0" >
					<langLabel bitmap="true" y="211" x="20" value="{{paylines}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
					<langLabel bitmap="true" y="215" x="225" value="{{lines}}" fontFamily="lang" fontSize="22" fill="0xffffff" />
					<langLabel bitmap="true" y="206" x="186" value="{{numBetLines}}" align="center" fontFamily="lang" fontSize="36" fill="0xF3DE3F" />
				</layer>
			</placeholder>
			<layer y="100">
				<langLabel bitmap="true" y="310" x="20" value="{{linebet}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
				<trackBar id="betBar" x="110" y="412" barLength="292" touchRadius="30" btnSize="17" onSelect="betBarSelectHandler" onChange="betBarChangeHandler" type="object">
					<label id="min" align="left" fontFamily="Din, Arial" fontSize="23" fill="0xaaaaaa" x="-90" y="-10" />
					<label id="max" align="right" fontFamily="Din, Arial" fontSize="23" fill="0xaaaaaa" x="400" y="-10" />
					<label id="label" align="center" fontFamily="Din, Arial" fontSize="23" fill="0xF3DE3F" value="0.01" y="-47" />
				</trackBar>
			</layer>
			<layer y="190">
				<trackBar id="soundBar" x="110" y="500" barLength="292" touchRadius="30" btnSize="17" onSelect="soundBarSelectHandler" onChange="soundBarChangeHandler">
					<img res="@atlas/ui/settingsoundoff.png" x="-83" y="-16" scale="0.7" />
					<img res="@atlas/ui/settingsoundon.png" x="365" y="-16" scale="0.7" />
				</trackBar>
				<langLabel bitmap="true" y="417" x="20" value="{{soundsetting}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
			</layer>
		</layer>
        <include id="autospin" ref="../../_commons/src/layout/3.2/portrait/autospin.both.xml" />
		<placeholder id="infoPanel">
			<infoPanel id="infoPanel" x="0" pages="{{numInfoPages}}" indicatorOn="@atlas/ui/info-indicator-on.png" indicatorOff="@atlas/ui/info-indicator-off.png" indicatorY="15" indicatorGap="70" />
		</placeholder>
		<rectangle width="960" height="960" color="0x1E1E1E" />
	</view>
</scene>