<scene id="settings">
	<view>
		<button id="btnHome" pivot="50%,50%" x="48" up="@atlas/ui/home.png" onClick="homeClickHandler" />
		<button id="btnBack" pivot="50%,50%" x="48" up="@atlas/ui/close.png" onClick="backClickHandler" />
		<toggleButton id="btnBet" x="48" selected="true" onClick="betKeyDown">
			<img id="up" res="@atlas/ui/betsetting.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/betsettingon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" />
			</layer>
		</toggleButton>
		<toggleButton id="btnInfo" x="48" onClick="infoKeyDown">
			<img id="up" res="@atlas/ui/info.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/infoon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" />
			</layer>
		</toggleButton>
		<toggleButton id="btnAutoSpin" x="48" onClick="autoKeyDown">
			<img id="up" res="@atlas/ui/autospin.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/autospinon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" />
			</layer>
		</toggleButton>
		<rectangle width="95" height="540" color="0x000000" />
		<layer id="betPanel" x="30">
			<layer x="18" y="0">
				<label id="totalBet" align="center" fontFamily="Din, Arial" fontSize="30" fill="0Xffffff" value="RMB 10000.00" x="590" y="85" />
				<langLabel bitmap="true" x="228" align="left" y="84" value="{{totalbet}}" fontFamily="lang" fontSize="35" fill="0xffffff" />
				<img res="@atlas/ui/box-total-bet.png" x="142" y="55" scale="1.8" />
			</layer>
			<toggleGroup id="betGroup" numButtons="3" x="250" y="180" onClick="betGruopClickHandler">
				<layer>
                    <langLabel bitmap="true" x="31" y="-11" value="{{bet1}}" fontFamily="lang" fontSize="24" fill="0xffffff" />
					<selection x="-30" y="-30" id="btn1">
						<rectangle width="150" height="60" alpha="0" />
					</selection>
					<slide id="slide1">
						<circle radius="16" color="0x333333" />
						<circle radius="16" color="0xf3de3f" />
					</slide>
				</layer>
				<layer x="200">
                    <langLabel bitmap="true" x="31" y="-11" value="{{bet2}}" fontFamily="lang" fontSize="24" fill="0xffffff" />
					<selection x="-30" y="-30" id="btn2">
						<rectangle width="150" height="60" alpha="0" />
					</selection>
					<slide id="slide2">
						<circle radius="16" color="0x333333" />
						<circle radius="16" color="0xf3de3f" />
					</slide>
				</layer>
                <layer x="400">
                    <langLabel bitmap="true" x="31" y="-11" value="{{bet3}}" fontFamily="lang" fontSize="24" fill="0xffffff" />
					<selection x="-30" y="-30" id="btn3">
						<rectangle width="150" height="60" alpha="0" />
					</selection>
					<slide id="slide3">
						<circle radius="16" color="0x333333" />
						<circle radius="16" color="0xf3de3f" />
					</slide>
				</layer>
			</toggleGroup>
			<placeholder id="paylinesPanel">
				<layer y="0">
					<langLabel bitmap="true" x="132" y="241" value="{{paylines}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
					<langLabel bitmap="true" x="385" y="245" value="{{line}}" fontFamily="lang" fontSize="22" fill="0xffffff" />
					<langLabel bitmap="true" x="345" y="236" value="{{numBetLines}}" align="center" fontFamily="lang" fontSize="36" fill="0xF3DE3F" />
				</layer>
			</placeholder>
			<layer y="0">
				<langLabel bitmap="true" x="132" y="340" value="{{linebet}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
				<trackBar id="betBar" x="410" y="352" barLength="325" touchRadius="30" btnSize="17" onSelect="betBarSelectHandler" onChange="betBarChangeHandler" type="object">
					<label id="min" align="left" fontFamily="Din, Arial" fontSize="23" fill="0xaaaaaa" x="-115" y="-14" />
					<label id="max" align="right" fontFamily="Din, Arial" fontSize="23" fill="0xaaaaaa" x="452" y="-14" />
					<label id="label" align="center" fontFamily="Din, Arial" fontSize="23" fill="0xF3DE3F" value="0.01" y="-47" />
				</trackBar>
			</layer>
			<layer y="0">
				<trackBar id="soundBar" x="410" y="458" barLength="325" touchRadius="30" btnSize="17" onSelect="soundBarSelectHandler" onChange="soundBarChangeHandler">
					<img res="@atlas/ui/settingsoundoff.png" x="-85" y="-16" scale="0.7" />
					<img res="@atlas/ui/settingsoundon.png" x="418" y="-16" scale="0.7" />
				</trackBar>
				<langLabel bitmap="true" x="132" y="447" value="{{soundsetting}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
			</layer>
		</layer>
        <include id="autospin" ref="../../_commons/src/layout/3.2/autospin.mobile.xml" />
		<placeholder id="infoPanel">
			<infoPanel id="infoPanel" x="40" pages="{{numInfoPages}}" indicatorOn="@atlas/ui/info-indicator-on.png" indicatorOff="@atlas/ui/info-indicator-off.png" indicatorY="15" indicatorGap="70" />
		</placeholder>
		<rectangle width="960" height="960" color="0x1E1E1E" />
	</view>
</scene>