<services>
  <include ref="./src/symbolService.mini.xml" />
  <netService service="{%netServiceUrl%}" apiName="{%apiName%}"/>
  <placeholder id="reelAnimatorService">
    <reelAnimatorService type="inback" startSpeed="-5" acceleration="1" max="25" stopSpeed="-5"/>
  </placeholder>
  <placeholder id="soundService">
    <soundService resource="sounds" muted="true"/>
  </placeholder>
  <placeholder id="winLineService">
    <winLineService color="0xFFFFFC" width="2" border="1" borderColor="0xCE2004"/>
  </placeholder>
  <placeholder id="multiplierService">
	  <multiplierService mode="first" />
  </placeholder>
  <placeholder id="textService">
	  <textService resource="message,gamemessage" />
  </placeholder>
  <placeholder id="fontService">
    <if name="lang" in="cs,jp">
      <fontService size="-0.05" />
    </if>
    <if name="lang" in="vn">
      <fontService size="-0.2" y="0.1"/>
    </if>
    <if name="lang" value="kh">
      <fontService size="-0.15" y="-0.25" />
    </if>
  </placeholder>
  <placeholder id="otherServices"/>
</services>