<services>
  <include ref="./src/symbolService.xml" />
  <netService service="{%netServiceUrl%}"/>
  <placeholder id="reelAnimatorService">
    <reelAnimatorService type="inback" startSpeed="-10" acceleration="1.3" max="50" stopSpeed="-10" adjustment="-0.5"/>
  </placeholder>
  <placeholder id="soundService">
    <soundService resource="sounds"/>
  </placeholder>
  <placeholder id="winLineService">
    <winLineService color="0xFFFFFC" width="5" border="2" borderColor="0xCE2004"/>
  </placeholder>
  <placeholder id="multiplierService">
    <multiplierService mode="first" />
  </placeholder>
  <placeholder id="textService">
    <textService resource="message,gamemessage" />
  </placeholder>
  <placeholder id="keyboardService">
    <include ref="../../_commons/src/layout/{%layoutVersion%}/keyboardService.xml"/>
  </placeholder>
  <placeholder id="fontService">
    <if name="lang" in="cs,jp">
      <fontService size="-0.05" />
    </if>
    <if name="lang" in="vn">
      <fontService size="-0.12" />
    </if>
    <if name="lang" value="kh">
      <fontService y="-0.2" size="-0.1" />
    </if>
  </placeholder>
  <placeholder id="otherServices"/>
</services>