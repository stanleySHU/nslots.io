<layer id="hud">
	<placeholder id="cheatBar">
		<cheatBar id="cheatBar" keys="1:Small Win,2:Big Win,3:Feature" l-x="0" p-x="-70" p-scale="0.69,0.8" l-scale="1"/>
	</placeholder>
	<img res="@atlas/ui/btneffect2.png" id="btnBonusEffect" pivot="50%,50%" scale="1" l-x="888" l-y="269" p-x="275" p-y="838" />
	<if name="bonusbet" value="1">
		<img res="@atlas/ui/btneffect1.png" id="bonusbetEffect" pivot="50%,50%" scale="0.35" x="886" y="432" />
	</if>
	<menu id="menu" x="12" l-y="5" p-y="440">
		<button id="toggle" y="390" up="@atlas/ui/menu.png" onClick="clickMenuHandler" />
		<button id="lobby" y="50" up="@atlas/ui/exit.png" onClick="clickExitHandler" />
		<button id="history" y="135" up="@atlas/ui/history.png" onClick="clickHistoryHandler" />
		<button id="settings" y="220" up="@atlas/ui/setting.png" onClick="clickSettingsHandler" />
		<toggleButton id="sound" y="305" onClick="clickSoundHandler">
			<img id="up" res="@atlas/ui/soundon.png" />
			<img id="down" res="@atlas/ui/soundoff.png" />
		</toggleButton>
		<if name="fround" value="1">
			<froundToggle id="fround" y="400" l-x="100" p-x="90" onClick="clickFroundHandler" visible="false">
				<layer x="70">
					<label y="-8" x="-1" bitmap="true" id="froundCount" align="center" fontFamily="number" fontSize="20" fill="0xffffff"/>
					<circle radius="14" color="0xff0000"/>
					<circle radius="16" color="0xffffff"/>
				</layer>
				<layer id="up">
					<layer>
						<img res="@atlas/fround/box-close.png"/>
						<img id="shine" res="@atlas/fround/shine.png" pivot="70px,65px" x="35" y="28"/>
					</layer>
					<tween name="box-anim" auto="true"/>
				</layer>
				<layer id="down">
					<img res="@atlas/fround/box-open.png"/>
					<img res="@atlas/fround/freerounds-{{LANGUAGE}}.png" pivot="50%,50%" y="70" scale="0.8" x="45"/>
					<img id="shine2" res="@atlas/fround/shine.png" pivot="70px,65px" x="45" y="35"/>
				</layer>
			</froundToggle>
		</if>
		<if name="bonusbet" value="1">
			<button id="realPlay" up="@atlas/ui/realplay2.png" onClick="clickRealPlayHandler"  l-y="220" p-y="390" l-x="0" p-x="441"/>
			<button id="fund" up="@atlas/ui/fund2.png" onClick="clickFundHandler" l-y="220" p-y="390" l-x="0" p-x="441" />
		</if>
		<if name="bonusbet" value="1" not="true">
			<button id="realPlay" up="@atlas/ui/realplay2.png" onClick="clickRealPlayHandler" l-y="390" l-x="837" p-y="390" p-x="441"/>
			<button id="fund" up="@atlas/ui/fund2.png" onClick="clickFundHandler" l-y="390" l-x="837" p-y="390" p-x="441"/>
		</if>
		<if name="bonusbet" value="1">
			<toggleButton id="bonusbet" y="390" x="837" command="bonusbet">
				<img id="up" res="@atlas/bonusbetlang/bonusbetoff.png" />
				<img id="down" res="@atlas/bonusbetlang/bonusbeton.png" />
			</toggleButton>
		</if>
	</menu>
	<spinButton id="btnSpin" scale="1.2,1.2" l-x="888" l-y="270" pivot="50%,50%" spin="@atlas/ui/spin.png" skip="@atlas/ui/skip.png" hold="@atlas/ui/spin.png" stop="@atlas/ui/stop.png" bonus="@atlas/ui/play.png" command="spin" holdcommand="autospin" p-x="270" p-y="840" />
	<rectangle width="960" height="540" alpha="0" />
</layer>
