<scene id="settings">
	<view>
		<button id="btnHome" pivot="50%,50%" l-x="48" p-y="867" up="@atlas/ui/home.png" onClick="homeClickHandler" />
		<button id="btnBack" pivot="50%,50%" l-x="48" p-y="867" up="@atlas/ui/close.png" onClick="backClickHandler" />
		<toggleButton id="btnBet" l-x="48" p-y="867" selected="true" onClick="betKeyDown">
			<img id="up" res="@atlas/ui/betsetting.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/betsettingon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" l-rotation="0" p-rotation="-90" />
			</layer>
		</toggleButton>
		<toggleButton id="btnInfo" l-x="48" p-y="867" onClick="infoKeyDown">
			<img id="up" res="@atlas/ui/info.png" pivot="50%,50%" />
			<layer id="down">
				<img res="@atlas/ui/infoon.png" pivot="50%,50%" />
				<img res="@atlas/ui/icontab.png" pivot="50%,50%" l-rotation="0" p-rotation="-90" />
			</layer>
		</toggleButton>
		<rectangle width="95" height="540" color="0x000000" l-visible="true" p-visible="false" />
		<rectangle width="540" height="140" color="0x000000" y="820" visible="false" l-visible="false" p-visible="true" />
		<layer id="betPanel" x="30">
			<layer y="50">
				<label id="totalBet" align="center" fontFamily="Arial" fontSize="30" fill="0Xffffff" value="RMB 10000.00" l-x="590" l-y="85" p-x="230" p-y="100" />
				<langLabel bitmap="true" l-x="228" p-x="230" l-align="left" p-align="center" l-y="84" p-y="70" value="{{totalbet}}" fontFamily="lang" fontSize="35" fill="0xffffff" p-scale="0.8" l-scale="1"/>
				<img res="@atlas/ui/box-total-bet.png" l-x="142" y="55" l-scale="1.8" p-x="-20" p-scale="1.38,1.85" />
			</layer>
			<placeholder id="paylinesPanel">
				<layer l-y="0" p-y="90">
					<langLabel bitmap="true" l-x="135" y="211" p-x="-10" value="{{paylines}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
					<langLabel bitmap="true" l-x="380" y="215" p-x="240" value="{{lines}}" fontFamily="lang" fontSize="22" fill="0xffffff" />
					<langLabel bitmap="true" l-x="360" y="206" p-x="220" value="{{numBetLines}}" align="right" fontFamily="lang" fontSize="36" fill="0xF3DE3F" />
				</layer>
			</placeholder>
			<layer l-y="0" p-y="120">
				<langLabel bitmap="true" l-x="135" y="310" p-x="-10" value="{{linebet}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
				<trackBar id="betBar" l-x="370" l-y="322" p-x="55" p-y="412" l-barLength="400" p-barLength="335" touchRadius="30" btnSize="17" onSelect="betBarSelectHandler" onChange="betBarChangeHandler" type="object">
					<label bitmap="true" id="min" align="right" fontFamily="lang" fontSize="23" fill="0xaaaaaa" l-x="-36" p-x="-25" y="-10" />
					<label bitmap="true" id="max" align="left" fontFamily="lang" fontSize="23" fill="0xaaaaaa" l-x="422" p-x="346" y="-10" />
					<label bitmap="true" id="label" align="center" fontFamily="lang" fontSize="23" fill="0xF3DE3F" value="0.01" y="-47" />
				</trackBar>
			</layer>
			<layer l-y="0" p-y="190">
				<trackBar id="soundBar" l-x="370" l-y="428" p-x="50" p-y="518" l-barLength="400" p-barLength="350" touchRadius="30" btnSize="17" onSelect="soundBarSelectHandler" onChange="soundBarChangeHandler">
					<img res="@atlas/ui/settingsoundoff.png" x="-48" y="-14" scale="0.6" />
					<img res="@atlas/ui/settingsoundon.png" l-x="423" p-x="373" y="-15" scale="0.6" />
				</trackBar>
				<langLabel bitmap="true" l-x="135" y="417" p-x="-10" value="{{soundsetting}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
				
			</layer>
		</layer>
		<placeholder id="infoPanel">
			<infoPanel id="infoPanel" l-x="40" p-x="0" pages="{{numInfoPages}}" indicatorOn="@atlas/ui/info-indicator-on.png" indicatorOff="@atlas/ui/info-indicator-off.png" indicatorY="15" indicatorGap="70" />
		</placeholder>
		<rectangle width="960" height="960" color="0x1E1E1E" />
	</view>
</scene>
