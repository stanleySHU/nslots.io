<scene id="splash" next="main">
  <resources>
		<atlas id="ui" src="../_commons/ui/v{{uiVersion}}/{{HUDLANG}}.mini.json" />
		<text id="font" src="../_commons/font/{{LANGUAGE}}.xml" />
		<text id="winnumber" src="../_commons/font/winnumber.xml" />
		<text id="number" src="../_commons/font/number.xml" />
    <placeholder id="splashres"/>
    <placeholder id="uitheme">
      <atlas id="uitheme" src="../_commons/ui/v{{uiVersion}}/purple.mini.json" />
    </placeholder>
  </resources>
  <view>
    <placeholder id="splashview"/>
    <img id="circle" res="@img/preloader_anim" x="125" y="190" pivot="50%,50%"/>
    <label x="125" y="215" id="label" fontFamily="Arial" fontSize="17" fill="0xffffff" align="center"/>
    <label x="220" y="220" id="version" fontFamily="Arial" fontSize="15" fill="0xdddddd" stroke="0x000000" strokeThickness="2" align="center" />
    <img res="@img/bg-loading"/>
  </view>
</scene>