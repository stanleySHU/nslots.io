	
<betPanel id="betPanel" x="68" y="67" visible="false">
	<toggleGroup id="betGroup" numButtons="3" onClick="betGruopClickHandler">
		<layer x="18" y="-16">
			<if name="lang" in="jp,kh" not="true">
				<langLabel bitmap="true" x="-3" y="-23" align="center" value="{{bet1}}" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
			</if>
			<if name="lang" in="jp,kh">
				<langLabel bitmap="true" x="-7" y="-23" align="center" value="{{bet1}}" fontFamily="lang" fontSize="9" fill="0xaaaaaa" />
			</if>
			<selection x="-12" y="-25" id="btn1">
				<rectangle width="24" height="40" alpha="0" />
			</selection>
			<slide id="slide1">
				<layer />
				<img res="@atlas/uitheme/check.png" pivot="50%,50%" />
			</slide>
		</layer>
		<layer x="54" y="-16">
			<if name="lang" in="jp,kh" not="true">
				<langLabel bitmap="true" x="0" y="-23" align="center" value="{{bet2}}" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
			</if>
			<if name="lang" in="jp,kh">
				<langLabel bitmap="true" x="0" y="-23" align="center" value="{{bet2}}" fontFamily="lang" fontSize="9" fill="0xaaaaaa" />
			</if>
			<selection x="-12" y="-25" id="btn2">
				<rectangle width="24" height="40" alpha="0" />
			</selection>
			<slide id="slide2">
				<layer />
				<img res="@atlas/uitheme/check.png" pivot="50%,50%" />
			</slide>
		</layer>
		<layer x="90" y="-16">
			<if name="lang" in="jp,kh" not="true">
				<langLabel bitmap="true" x="3" y="-23" align="center" value="{{bet3}}" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
			</if>
			<if name="lang" in="jp,kh">
				<langLabel bitmap="true" x="7" y="-23" align="center" value="{{bet3}}" fontFamily="lang" fontSize="9" fill="0xaaaaaa" />
			</if>
			<selection x="-12" y="-25" id="btn3">
				<rectangle width="24" height="40" alpha="0" />
			</selection>
			<slide id="slide3">
				<layer />
				<img res="@atlas/uitheme/check.png" pivot="50%,50%" />
			</slide>
		</layer>
	</toggleGroup>
	<langLabel bitmap="true" x="56" y="8" value="{{linebet}}" case="upper" align="center" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
	<langLabel bitmap="true" x="56" y="63" value="{{autospin}}" case="upper" align="center" fontFamily="lang" fontSize="11" fill="0xaaaaaa" />
	<label id="betValue" bitmap="true" x="56" y="24" value="0.00" fontFamily="number" align="center" fontSize="18" fill="0xffffff"/>
	<label id="autoValue" bitmap="true" x="56" y="79" value="0.00" fontFamily="number" align="center" fontSize="18" fill="0xffffff"/>
	<button id="betPlus" command="betPlus" holdEnabled="true" x="86" y="20">
		<img id="up" res="@atlas/ui/plus.png"/>
		<img id="over" res="@atlas/ui/plus-over.png"/>
		<img id="disable" res="@atlas/ui/plus-disabled.png"/>
	</button>
	<button id="betMinus" command="betMinus" holdEnabled="true" x="9" y="20">
		<img id="up" res="@atlas/ui/minus.png"/>
		<img id="over" res="@atlas/ui/minus-over.png"/>
		<img id="disable" res="@atlas/ui/minus-disabled.png"/>
	</button>
	<button id="autoPlus" command="autoPlus" holdEnabled="true" x="86" y="75">
		<img id="up" res="@atlas/ui/plus.png"/>
		<img id="over" res="@atlas/ui/plus-over.png"/>
		<img id="disable" res="@atlas/ui/plus-disabled.png"/>
	</button>
	<button id="autoMinus" command="autoMinus" holdEnabled="true" x="9" y="75">
		<img id="up" res="@atlas/ui/minus.png"/>
		<img id="over" res="@atlas/ui/minus-over.png"/>
		<img id="disable" res="@atlas/ui/minus-disabled.png"/>
	</button>
	<img res="@atlas/uitheme/linebet-bg.png" y="-53" x="-14"/>
</betPanel>