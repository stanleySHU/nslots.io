<scene id="splash" next="main">
  <resources>
		<atlas id="ui" src="../_commons/ui/v{{uiVersion}}/{{LANGUAGE}}.json" />
		<text id="font" src="../_commons/font/{{LANGUAGE}}.xml" />
		<text id="winnumber" src="../_commons/font/winnumber.xml" />
		<text id="number" src="../_commons/font/number.xml" />
    <text id="configcommons" src="../_commons/config/commons.json" /> 
    <json id="sounds" src="assets/sounds.json" />
    <json id="commonsounds" post="true" src="../_commons/sounds/sounds.json" />
    <sheet id="tournamenticon" src="../_commons/tournament/trophyanim.png" frame="12" width="12" size="90,90" />
    <placeholder id="splashres"/>
  </resources>
  <view>
    <placeholder id="splashview"/>
    <img id="circle" res="@img/preloader_anim" x="480" y="480" pivot="50%,50%"/>
    <label x="480" y="500" id="label" fontFamily="Arial" fontSize="20" fontWeight="bold" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" align="center"/>
    <label x="920" y="510" id="version" fontFamily="Arial" fontSize="18" fill="0xdddddd" stroke="0x000000" strokeThickness="2" align="center"/>
    <img res="@img/bg-loading"/>
  </view>
</scene>