<include ref="../../_commons/src/layout/4.0/betPanel.mobile.both.xml">
	<placeholder id="linebetSelection">
		<layer id="paylines">
			<langLabel bitmap="true" l-x="50" l-y="247" p-x="20" p-y="427" value="{{lines}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
			<langLabel l-x="170" l-y="242" p-x="270" p-y="422" value="{{numBetLines}}" align="center" fontFamily="Din, Arial" fontSize="25" fill="{{colorTheme}}" />
		</layer>		
		<layer id="payways" visible="false">
			<langLabel bitmap="true" l-x="50" l-y="247" p-x="20" p-y="427" value="{{wayswin}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
			<langLabel l-x="170" l-y="242" p-x="270" p-y="422" value="{{winWays}}" align="center" fontFamily="Din, Arial" fontSize="25" fill="{{colorTheme}}" />
		</layer>
		<!-- line -->
		<rectangle x="15" y="462" width="510" height="2" color="0x474747" l-visible="false" p-visible="true" />
		
		<layer l-x="288" l-y="248" l-pivot="0,0" p-x="130" p-y="487" p-pivot="50%,0">
			<langLabel bitmap="true" value="{{betlevel}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
		</layer>
			
		<carousel 	id="betLevelSelection" l-x="388" l-y="240" p-x="58" p-y="592" top="@atlas/ui/total-bet.png"
					dropdown-x="28" numItemsShown="5" itemsTextX="-14"
					itemOffsetY="4" dropdownWidth="150" itemHeight="35"
					dropdown="@atlas/ui/linebet_list.png" highlight="@atlas/ui/popup-select.png" dropdownPosition="top" 
					itemsTextColor="0xBFBFBF" itemGap="3" itemPadding="8" mouseWheelGap="27" scrollPadding="18"
					scrollbutton="@atlas/ui/scrollerbar_in.png"
					scrollbar="@atlas/ui/scrollerbar_out.png" 
					scrollbarY="-9" highlightColor="0x3D3D4B"
					align="center" fontFamily="Din, Arial" fontSize="25" selectedItemTextColor="{{colorTheme}}" 
					arrowSize="14" arrowColor="0xE4E4E4" arrowPadding="10" 
					scaleTopBottomItems="2" scaleTopBottomValue="0.12" />


		<label x="270" y="594" align="center" fontFamily="Din, Arial" fontSize="22" fill="0xBFBFBF" value="x" l-visible="false" p-visible="true" />

		<layer id="labelbet" l-x="580" l-y="248" l-pivot="0,0" p-x="375" p-y="487" p-pivot="50%,0">
			<langLabel id="linebet" bitmap="true" value="{{linebet}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
			<langLabel id="betamount" visible="false" bitmap="true" value="{{betamount}}" fontFamily="lang" fontSize="22" fill="0xBFBFBF" />
			<label id="currency" y="-3" fontFamily="Din, Arial" fontSize="22" fill="0xBFBFBF" value="  ({{CCY}})" />
		</layer>
		<carousel 	id="betSelection" l-x="770" l-y="240" p-x="325" p-y="592" top="@atlas/ui/total-bet.png"
					dropdown-x="28" numItemsShown="5" itemsTextX="-14"
					itemOffsetY="4" dropdownWidth="150" itemHeight="35"
					dropdown="@atlas/ui/linebet_list.png" highlight="@atlas/ui/popup-select.png" dropdownPosition="top" 
					itemsTextColor="0xBFBFBF" itemGap="3" itemPadding="8" mouseWheelGap="27" scrollPadding="18"
					scrollbutton="@atlas/ui/scrollerbar_in.png"
					scrollbar="@atlas/ui/scrollerbar_out.png" 
					scrollbarY="-9" highlightColor="0x3D3D4B"
					align="center" fontFamily="Din, Arial" fontSize="25" selectedItemTextColor="{{colorTheme}}" 
					arrowSize="14" arrowColor="0xE4E4E4" arrowPadding="10" 
					scaleTopBottomItems="2" scaleTopBottomValue="0.12" />
					
		<rectangle x="0" y="237" width="960" height="40" color="0x3D3D4B" l-visible="true" p-visible="false" />
		<rectangle x="0" y="590" width="540" height="40" color="0x3D3D4B" l-visible="false" p-visible="true" />

		<!-- line -->
		<rectangle x="25" y="370" width="910" height="2" color="0x474747" l-visible="true" p-visible="false" />
		<rectangle x="15" y="715" width="510" height="2" color="0x474747" l-visible="false" p-visible="true" />
	</placeholder>
</include>