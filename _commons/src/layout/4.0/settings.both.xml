					<img res="@atlas/ui/settingsoundon.png" l-x="418" p-x="365" y="-16" scale="0.7" />
				</trackBar>
				<langLabel bitmap="true" l-x="132" y="417" p-x="20" value="{{soundsetting}}" fontFamily="lang" fontSize="25" fill="0xffffff" />
			</layer>
		</layer>
