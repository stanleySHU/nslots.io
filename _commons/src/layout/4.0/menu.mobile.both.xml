<menu id="menu">
    <layer id="panel">       
        <layer id="landscape" y="290" l-visible="true" p-visible="false" >  
            <button id="close" x="925" y="22">
                <img id="up" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0xEEEEEE" />
                <img id="over" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" />
                <img id="disable" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0x888888" />
            </button>
            <placeholder id="logoLandscape">
                <img id="logo" res="@atlas/ui/gpilogo.png" x="480" y="40" pivot="50%,50%" scale=".45"/>
            </placeholder>           
            <button id="home"  visible="false" command="home" y="120" pivot="50%,50%"> 
                <img id="up" res="@atlas/ui/menu-home-on.png" />
                <img id="over" res="@atlas/ui/menu-home-on.png" />
                <img id="disable" res="@atlas/ui/menu-home-on.png" alpha="0.5"/>
            </button>
            <button id="livechat" visible="false"  command="livechat"  y="120" pivot="50%,50%">
                <img id="up" res="@atlas/ui/menu-livechat-on.png"  />
                <img id="over" res="@atlas/ui/menu-livechat-on.png" alpha="0.5" />
                <img id="disable" res="@atlas/ui/menu-livechat-on.png" />
            </button>
            <button id="lobby" visible="false"  command="lobby"  y="120" pivot="50%,50%">
                <img id="up" res="@atlas/ui/menu-back-on.png" />
                <img id="over" res="@atlas/ui/menu-back-on.png" />
                <img id="disable" res="@atlas/ui/menu-back-on.png" alpha="0.5" />
            </button> 
            <button id="info"  visible="false" command="paytable" y="120" pivot="50%,50%">
                <img id="up" res="@atlas/ui/info-on.png"  />
                <img id="over" res="@atlas/ui/info-on.png" />
                <img id="disable" res="@atlas/ui/info-on.png" alpha="0.5" />
            </button>            
            <toggleButton id="sound" visible="false"  onClick="clickSoundHandler" y="120" pivot="50%,50%">
                <button id="up" >
                    <img id="up" res="@atlas/ui/menu-soundOn-on.png"/>
                    <img id="over" res="@atlas/ui/menu-soundOn-on.png"/>
                </button>
                <button id="down">
                    <img id="up" res="@atlas/ui/menu-soundOff-on.png"/>
                    <img id="over" res="@atlas/ui/menu-soundOff-on.png" />
                </button>
            </toggleButton> 
            <if name="help" value="1" >
                <button id="help" visible="false"  command="help"  y="120" pivot="50%,50%">
                    <img id="up" res="@atlas/ui/menu-questionmark-on.png" />
                    <img id="over" res="@atlas/ui/menu-questionmark-on.png" />
                    <img id="disable" res="@atlas/ui/menu-questionmark-on.png" alpha="0.5"/>
                </button>
            </if>
            <button id="history" visible="false"  command="history"  y="120" pivot="50%,50%">
                <img id="up" res="@atlas/ui/menu-history-on.png"  />
                <img id="over" res="@atlas/ui/menu-history-on.png" />
                <img id="disable" res="@atlas/ui/menu-history-on.png"  alpha="0.5"/>
            </button>
            <langLabel bitmap="true" visible="false" id="lblInfo" value="{{paytable}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel id="lblSound" visible="false" bitmap="true"  value="{{sound}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel bitmap="true" visible="false" id="lblHelp" value="{{gamehelp}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel bitmap="true" visible="false" id="lblHistory" value="{{bethistory}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel bitmap="true" visible="false" id="lblLiveChat" value="{{chat}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel bitmap="true" visible="false" id="lblHome" value="{{home}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <langLabel bitmap="true" visible="false" id="lblLobby" value="{{lobby}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <placeholder id="backgroundLandscape">
                <rectangle width="960" height="200" color="0x30303C" alpha="1" interactive="true" />
            </placeholder>
        </layer>
        <layer id="portrait" y="474" l-visible="false" p-visible="true" >
            <button id="close" x="500" y="150">
                <img id="up" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0xEEEEEE" />
                <img id="over" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" />
                <img id="disable" res="@atlas/ui/btn-collaspe.png" pivot="50%,50%" tint="0x888888" />
            </button>
            <placeholder id="logoPortrait">
                <img id="logo" res="@atlas/ui/gpilogo.png" x="270" y="150" pivot="50%,50%" scale=".45"/>
            </placeholder>          
            <button  id="info" visible="false" command="paytable"  pivot="50%,50%">
                <img id="up" res="@atlas/ui/info-on.png" />
                <img id="over" res="@atlas/ui/info-on.png" />
                <img id="disable" res="@atlas/ui/info-on.png" alpha="0.5" />
            </button>
            <langLabel bitmap="true" visible="false" id="lblInfo" value="{{paytable}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF" />
            <toggleButton  id="sound" visible="false" onClick="clickSoundHandler"  pivot="50%,50%">
                <button id="up">
                    <img id="up" res="@atlas/ui/menu-soundOn-on.png"/>
                    <img id="over" res="@atlas/ui/menu-soundOn-on.png"/>
                </button>
                <button id="down" >
                    <img id="up" res="@atlas/ui/menu-soundOff-on.png"/>
                    <img id="over" res="@atlas/ui/menu-soundOff-on.png" />
                </button>
            </toggleButton> 
            <langLabel id="lblSound" visible="false" bitmap="true"  value="{{sound}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <if name="help" value="1">
                <button  id="help" visible="false"  command="help" pivot="50%,50%" >
                    <img id="up" res="@atlas/ui/menu-questionmark-on.png" />
                    <img id="over" res="@atlas/ui/menu-questionmark-on.png"/>
                </button>
            </if>
            <langLabel bitmap="true" visible="false" id="lblHelp" value="{{gamehelp}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF" />
            <button  id="history" visible="false" command="history" pivot="50%,50%" >
                <img id="up" res="@atlas/ui/menu-history-on.png" />
                <img id="over" res="@atlas/ui/menu-history-on.png"/>
            </button>
            <langLabel bitmap="true" visible="false" id="lblHistory" value="{{bethistory}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF" />
            <button id="livechat"  visible="false" command="livechat" pivot="50%,50%" >
                <img id="up" res="@atlas/ui/menu-livechat-on.png" />
                <img id="over" res="@atlas/ui/menu-livechat-on.png"/>
            </button>
            <langLabel bitmap="true" visible="false" id="lblLiveChat" value="{{chat}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <button id="home"  visible="false" command="home" pivot="50%,50%" > 
                <img id="up" res="@atlas/ui/menu-home-on.png" />
                <img id="over" res="@atlas/ui/menu-home-on.png"/>
            </button>
            <langLabel bitmap="true" visible="false" id="lblHome" value="{{home}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF"  />
            <button id="lobby"  visible="false" command="lobby" pivot="50%,50%" >
                <img id="up" res="@atlas/ui/menu-back-on.png" />
                <img id="over" res="@atlas/ui/menu-back-on.png"/>
            </button> 
            <langLabel bitmap="true" visible="false" id="lblLobby" value="{{lobby}}" align="center" fontFamily="lang" fontSize="20" fill="0xFFFFFF" />
            <placeholder id="backgroundPortrait">
                <rectangle id="panelbgshort" visible="false" y="234" width="540" height="200" color="0x30303C" alpha="1" interactive="true" />
                <rectangle id="panelbglong"  visible="false" y="116"  width="540" height="320" color="0x30303C" alpha="1" interactive="true" />
            </placeholder>
        </layer>       
    </layer>
    <rectangle id="clickable" width="960" height="910" color="0x0" alpha=".7" />
</menu>