<scene id="infoPage">    
	<view>
        <button id="btnBack" pivot="50%,50%" l-x="1021" p-x="611" y="131" onClick="backClickHandler">
            <img id="up" res="@atlas/ui/btn-close.png" tint="{{colorTheme}}" />
        </button>
        <placeholder id="gameTitle">
        	<langLabel id="name" l-x="585" p-x="370" y="128" value="{{gametitle}}" case="upper" align="center" fontFamily="Din, Arial" fontSize="20" fontWeight="bold" pivot="0%,50%" fill="{{colorTheme}}" />
        </placeholder>
        <placeholder id="infoPanel">
            <infoPanel id="infoPanel" l-x="105" l-y="120" p-x="100" p-y="160" pages="{{numInfoPages}}" indicatorBase="@atlas/ui/info-indicator-base.png" indicatorOnTint="{{colorTheme}}" indicatorOffTint="0x56566E" indicatorOffsetYL="50" indicatorOffsetYP="90" indicatorGap="70" />
        </placeholder>
        <rectangle width="1170" height="152" color="0x2B2B36" l-visible="true" p-visible="false" />
        <rectangle y="152" width="1170" height="588" color="0x30303C" l-visible="true" p-visible="false" />
        <rectangle width="740" height="157" color="0x2B2B36" l-visible="false" p-visible="true" />
        <rectangle y="157" width="740" height="1013" color="0x30303C" l-visible="false" p-visible="true" />
    </view>
</scene>
