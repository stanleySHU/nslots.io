<scene id="infoPage">    
	<view>
        <button id="btnBack" pivot="50%,50%" x="611" y="131" onClick="backClickHandler">
            <img id="up" res="@atlas/ui/btn-close.png" tint="{{colorTheme}}" />
        </button>
        <placeholder id="gameTitle">
        	<langLabel id="name" x="370" y="128" value="{{gametitle}}" case="upper" align="center" fontFamily="Din, Arial" fontSize="20" fontWeight="bold" pivot="0%,50%" fill="{{colorTheme}}" />
        </placeholder>
        <placeholder id="infoPanel">
            <infoPanel id="infoPanel" x="100" y="160" pages="{{numInfoPages}}" indicatorBase="@atlas/ui/info-indicator-base.png" indicatorOnTint="{{colorTheme}}" indicatorOffTint="0x56566E" indicatorOffsetYL="90" indicatorOffsetYP="90" indicatorGap="70" />
        </placeholder>
        <rectangle width="740" height="157" color="0x2B2B36" />
        <rectangle y="157" width="740" height="1013" color="0x30303C" />
    </view>
</scene>
