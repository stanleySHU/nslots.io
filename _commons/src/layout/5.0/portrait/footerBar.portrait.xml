<footerBar id="footerBar">
	<placeholder id="winBox">		
		<layer id="winBox" x="370" y="828" visible="false">
			<animatedLabel id="winBoxLabel" bitmap="true" duration="700" fontFamily="winnumber" fontSize="30" value="0.00" align="center" />
		</layer>
	</placeholder>
	<layer id="timebox">
		<placeholder id="time">
			<label id="time" align="right" fontFamily="Din, Arial" fontSize="16" fill="0xCCCCCC" stroke="0x404040" strokeThickness="3" letterSpacing="1" lineJoin="round" x="730" y="10" />
		</placeholder>
	</layer>
	<layer id="panels" y="100">
		<placeholder id="balance">
			<animatedLabel x="193" y="1017" id="balance" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
			<if name="lang" in="kh"> 
				<langLabel id="balanceTitle"  x="193" y="1004" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<if name="lang" in="th"> 
				<langLabel id="balanceTitle"  x="193" y="1000" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="15" fill="0xffffff" />
			</if>
			<if name="lang" in="kh,th" not="true"> 
				<langLabel id="balanceTitle"  x="193" y="1000" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<rectangle x="193" y="1022" scale="0.9" width="185" height="60" color="0x000000" border="3" bcolor="0xCCCCCC" pivot="50%,50%" alpha="0.85" radius="10" />
		</placeholder>
		<placeholder id="bet">
			<animatedLabel x="370" y="1017" id="totalBet" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
			<if name="lang" in="id"> 
				<langLabel id="totalTitle" x="370" y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="14" fill="0xffffff" />
			</if>
			<if name="lang" in="th"> 
				<langLabel id="totalTitle" x="370" y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="15" fill="0xffffff" />
			</if>
			<if name="lang" in="kh"> 
				<langLabel id="totalTitle" x="370" y="1004" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<if name="lang" in="id,kh,th" not="true"> 
				<langLabel id="totalTitle" x="370" y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<rectangle x="370" y="1022"  scale="0.9" width="185" height="60" color="0x000000" border="3" bcolor="0xCCCCCC" pivot="50%,50%" alpha="0.85" radius="10" />
		</placeholder>	
		<placeholder id="betamount">
			<label x="547" y="1017" id="betAmount" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xFFB800" stroke="0x4d3b28" strokeThickness="2" />
			<if name="lang" in="kh"> 
				<langLabel id="betamountTitle" x="547" y="1004" value="{{betamount}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<if name="lang" in="th"> 
				<langLabel id="betamountTitle" x="547" y="1000" value="{{betamount}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="14.5" fill="0xffffff" />
			</if>
			<if name="lang" in="kh,th" not="true"> 
				<langLabel id="betamountTitle" x="547" y="1000" value="{{betamount}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<rectangle x="547" y="1022" scale="0.9" width="185" height="60" color="0x000000" border="3" bcolor="0xCCCCCC" pivot="50%,50%" alpha="0.85" radius="10" />
		</placeholder>
	</layer>
	<animatedLabel visible="false" id="win" align="left" value="0.00" fontFamily="Din, Arial" fontSize="2" fill="0xffffff" stroke="0x000" strokeThickness="2" />
</footerBar>
