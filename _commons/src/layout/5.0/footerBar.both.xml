			<rectangle l-x="310" l-y="604" l-scale="1" p-x="193" p-y="1022" p-scale="0.9" width="185" height="60" color="0x000000" border="3" bcolor="0xCCCCCC" pivot="50%,50%" alpha="0.85" radius="10" />
		</placeholder>
		<placeholder id="bet">
			<animatedLabel l-x="585" l-y="600" p-x="370" p-y="1017" id="totalBet" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
			<if name="lang" in="id"> 
				<langLabel id="totalTitle" l-x="585" l-y="580" p-x="370" p-y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="14" fill="0xffffff" />
			</if>
			<if name="lang" in="th"> 
				<langLabel id="totalTitle" l-x="585" l-y="580" p-x="370" p-y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="15" fill="0xffffff" />
			</if>
			<if name="lang" in="kh"> 
				<langLabel id="totalTitle" l-x="585" l-y="584" p-x="370" p-y="1004" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<if name="lang" in="id,kh,th" not="true"> 
				<langLabel id="totalTitle" l-x="585" l-y="580" p-x="370" p-y="1000" value="{{totalbet}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<rectangle l-x="585" l-y="604" l-scale="1" p-x="370" p-y="1022"  p-scale="0.9" width="185" height="60" color="0x000000" border="3" bcolor="0xCCCCCC" pivot="50%,50%" alpha="0.85" radius="10" />
		</placeholder>	
		<placeholder id="betamount">
			<label l-x="860" l-y="605" l-scale="1" p-x="547" p-y="1023" p-scale="0.95" id="betAmount" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xFFB800" stroke="0x4d3b28" strokeThickness="2" />
