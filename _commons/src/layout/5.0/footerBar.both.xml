<footerBar id="footerBar">
	<placeholder id="winBox">		
		<layer id="winBox" l-x="585" l-y="535" p-x="370" p-y="828" visible="false">
			<animatedLabel id="winBoxLabel" bitmap="true" duration="700" fontFamily="winnumber" fontSize="30" value="0.00" align="center" />
		</layer>
	</placeholder>
	<layer id="timebox">
		<placeholder id="time">
			<label id="time" align="right" fontFamily="Din, Arial" fontSize="16" fill="0xCCCCCC" stroke="0x404040" strokeThickness="3" letterSpacing="1" lineJoin="round" l-x="1160" l-y="10" p-x="730" p-y="10" />
		</placeholder>
	</layer>
	<layer id="panels" y="100">
		<placeholder id="balance">
			<animatedLabel l-x="310" l-y="600" p-x="193" p-y="1017" id="balance" value="0.00" fontFamily="Din, Arial" align="center" fontSize="21" fill="0xffffff" stroke="0x4d3b28" strokeThickness="2" />
			<if name="lang" in="kh"> 
				<langLabel id="balanceTitle"  l-x="310" l-y="584" p-x="193" p-y="1004" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
			</if>
			<if name="lang" in="th"> 
				<langLabel id="balanceTitle"  l-x="310" l-y="580" p-x="193" p-y="1000" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="15" fill="0xffffff" />
			</if>
			<if name="lang" in="kh,th" not="true"> 
				<langLabel id="balanceTitle"  l-x="310" l-y="580" p-x="193" p-y="1000" value="{{balance}} " case="upper" align="center" fontWeight="bold" fontFamily="Din, Arial" fontSize="16" fill="0xffffff" />
