<scene id="infoPage">
    <view>
        <button id="btnBack" pivot="50%,50%" l-x="1133" l-y="40" p-x="710" p-y="45" scale="0.6" onClick="backClickHandler">
            <img id="up" res="@atlas/ui/btn-close.png" tint="{{colorTheme}}" />
        </button>
        <langLabel id="name" l-x="585" l-y="40" p-x="370" p-y="45" value="{{gametitle}}" case="upper" align="center" fontFamily="Din, Arial" fontSize="38" fontWeight="bold" pivot="0%,50%" fill="{{colorTheme}}" />
        <rectangle width="1170" height="80" color="0x2B2B36" l-visible="true" p-visible="false" />
        <rectangle width="740" height="85" color="0x2B2B36" l-visible="false" p-visible="true" />
        <infoPanel id="infoPanel" l-x="105" l-y="20" p-x="100" p-y="10" indicatorBase="@atlas/ui/info-indicator-base.png" pages="{{numInfoPages}}" indicatorOnTint="{{colorTheme}}" indicatorOffTint="0x56566E" indicatorOffsetYL="50" indicatorOffsetYP="70" indicatorGap="105">
            <for from="0" to="4" step="1">
                <content>
                    <layer>
                        <img res="@atlas/info/info-{%index%}-l.jpg" l-visible="true" p-visible="false" />
                        <img res="@atlas/info/info-{%index%}-p.jpg" l-visible="false" p-visible="true" />
                        <rectangle id="bgp" width="810" height="1440" alpha="0" visible="true" />
                    </layer>
                </content>
            </for>
        </infoPanel>

        <rectangle width="1170" height="740" color="0x30303C" l-visible="true" p-visible="false" />
        <rectangle width="740" height="1170" color="0x30303C" l-visible="false" p-visible="true" />
    </view>
</scene>
