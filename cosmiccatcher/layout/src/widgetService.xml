<widgetService>
    <for from="0" to="9" step="1">
        <content visible="false">
            <symbol id="symbolWidget{%index%}" s="{%index%}">
                <layer id="winFrame" visible="false">
                    <label id="multiper" value="" x="0" y="40" align="center" fontSize="48" scale="1,-1" fontWeight="bold" fill="0xffd700"/>
                    <spineAnimation id="spine" x="5" y="15" res="@res/BonusAll" action="bonusA_mutiplier" auto="false" visible="false" scale="0.5"/>
                    <!-- <rectangle width="70" height="70" alpha="0.32" color="0xFFFF8F" pivot="50%,50%"/> -->
                </layer>
                <img res="@atlas/lang/bonus.png" pivot="50%,50%" y="15" visible="{%visible%}"/>
                <spineAnimation id="spine" res="@res/UI" action="symbol_grow" auto="false" visible="true" scale="0.33" speed="0.75"/>
                <img id="symbol1" res="@atlas/symbols/{%index%}.png" pivot="50%,50%" scale="3, -3"/>
                <img id="symbol2" res="@atlas/symbols/{%index%}.png" pivot="50%,50%" scale="3,-3"/>
            </symbol>
        </content>
        <arguments>
            <argument id="0" visible="true"/>
            <argument id="1" />
            <argument id="2" />
            <argument id="3" />
            <argument id="4" />
            <argument id="5" />
            <argument id="6" />
            <argument id="7" />
            <argument id="8" />
            <argument id="9" />
        </arguments>
    </for>

    <for from="2" to="9" step="1">
        <content>
            <button id="btnButton{%index%}" onClick="onBet" parameter="{%index%}" sound="bet_button">
                <spineAnimation id="winFrame" x="28" y="23" res="@res/YouWinSpine" action="winFrame" auto="false" visible="false" scale="0.5"/>
                <movieClip id="sparkle" speed="0.33" mode="new" loop="0" auto="false" visible="false" res="@animations/components/sparkle" x="30" y="15" pivot="50%,50%"/>
                <img res="@atlas/symbols/{%index%}.png" x="28" y="{%y%}" scale="{%scale%}" pivot="50%, 50%"/>
                <layer id="box">
                    <layer id="bet" y="1" x="0">
                        <label x="30" y="53" value="BET" align="center" fontSize="14" fontWeight="bold" fill="0x000000"/>
                        <img res="@atlas/components/Buttons_BETonly.png"/>
                    </layer>
                    <layer id="amount">
                        <label id="label" x="28" y="54" value="0" align="center" fontSize="14" fontWeight="bold" fill="0xffffff"/>
                        <img res="@atlas/components/Buttons_amount.png"/>
                    </layer>
                    <img res="@atlas/components/Buttons_Panel.png"/>
                </layer>
            </button>
        </content>
        <arguments>

            <argument id="2" scale="0.8" y="25"/>
            <argument id="3" scale="0.8" y="25"/>
            <argument id="4" scale="0.7" y="20"/>
            <argument id="5" scale="0.8" y="25"/>
            <argument id="6" scale="0.8" y="21"/>
            <argument id="7" scale="0.8" y="25"/>
            <argument id="8" scale="0.8" y="28"/>
            <argument id="9" scale="0.8" y="28"/>
        </arguments>
    </for>
</widgetService>