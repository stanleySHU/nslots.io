<widgetService>
  <label id="winLevelLabel" x="8" bitmap="true" fontFamily="winnumber" fontSize="45" align="center" value="0.00" pivot="0,50%" />
  <!-- BUY BONUS -->
  <!-- <spineAnimation id="buyBonusSpine" skin="default" res="@res/buyBonusSpine" action="BuyBonus_Intro" auto="false"/>
   -->

  <!-- TOTAL WIN LABELS -->
  <animatedLabel bitmap="true" id="totalWinLabel" fontFamily="winnumber" align="center" y="13" fontSize="45" value="0.00" duration="2000" scale="1,-1"/>

  <animatedLabel bitmap="true" id="bigWinPanelLabel" fontFamily="youwon" align="center" y="45" fontSize="75" value="0.00" duration="2000" scale="2,-2"/>
  <animatedLabel bitmap="true" id="totalWinPanelLabel" fontFamily="youwon" align="center" y="45" fontSize="75" value="0.00" duration="2000" scale="2,-2"/>
  <label bitmap="true" id="youWonPanelLabel" fontFamily="youwon" align="center" x="-50" fontSize="75" value="0" scale="2,-2" rotation="90"/>
  <!-- INTRO -->
  <layer id="btn-continue">
    <rectangle id="clickable" width="170" height="70" radius="34" alpha="0" pivot="50%,50%"/>
    <img id="img" res="@atlas/introAtlas/continue_text.png" scale="0.8" pivot="50%,50%" />
    <img id="img" res="@atlas/introAtlas/continue.png" pivot="50%,50%" />
  </layer>

  <buttonSlide id="btn-navigator" pivot="50%,50%">
    <img id="up" res="@atlas/introAtlas/Button_unselected.png" />
    <img id="over" res="@atlas/introAtlas/Button_unselected.png" />
    <img id="disable" res="@atlas/introAtlas/Button_selected.png" />
  </buttonSlide>
  <widget id="btn-navigator-1" name="btn-navigator" x="-60" />
  <widget id="btn-navigator-2" name="btn-navigator" x="0" />
  <widget id="btn-navigator-3" name="btn-navigator" x="60" />


  <layer id="intro-logo">
    <img res="@atlas/introAtlas/logo.png" pivot="50%,50%" scale="1.7" />
    <img res="@atlas/introAtlas/MJ.png" y="-100" pivot="50%,50%" />
  </layer>
  <layer id="intro-reel">
    <img res="@atlas/introAtlas/Reel.png" pivot="50%,50%" />
  </layer>

  <layer id="intro-text">
    <layer id="page3" scale="1" visible="false">
      <label bitmap="true" id="label" fontFamily="winnumber" fontSize="60" y="450" align="center" value="3"/>
    </layer>
    <layer id="page2" scale="1" visible="false">
      <label bitmap="true" id="label" fontFamily="winnumber" fontSize="60" y="450" align="center" value="2"/>
    </layer>
    <layer id="page1" scale="1" visible="false">
      <label bitmap="true" id="label" fontFamily="winnumber" fontSize="60" y="450" align="center" value="1"/>
    </layer>
  </layer>


  <layer id="intro-content">
    <layer id="page3" scale="1">
      <img res="@atlas/introAtlas/content-3.png" pivot="50%,50%" y="-90" />
      <rectangle id="bg" width="380" height="500" alpha="0" pivot="50%,50%" />
    </layer>
    <layer id="page2" scale="1">
      <img res="@atlas/introAtlas/content-2.png" pivot="50%,50%" y="-90" />
      <rectangle id="bg" width="380" height="500" alpha="0" pivot="50%,50%"/>
    </layer>
    <layer id="page1" scale="1">
      <img res="@atlas/introAtlas/content-1.png" pivot="50%,50%" y="-90" />
      <rectangle id="bg" width="380" height="500" alpha="0" pivot="50%,50%"/>
    </layer>
  </layer>

</widgetService>